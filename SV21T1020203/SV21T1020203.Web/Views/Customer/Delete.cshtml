@model SV21T1020203.DomainModels.Customer
@{
  ViewBag.Title = "Xóa khách hàng";
}

<div class="box box-primary ">
  <div class=" box-body">
    <form action="~/Customer/Delete/@Model.CustomerID" method="post">
      <div class="form-group">
        <label>Tên khách hàng:</label>
        <p class="from-control-static form-control ">@Model.CustomerName</p>
      </div>
      <div class="form-group">
        <label>Tên giao dịch:</label>
        <p class="from-control-static form-control "> @Model.ContactName</p>
      </div>
      <div class="form-group">
        <label>Điện thoại:</label>
        <p class="from-control-static form-control ">@Model.Phone</p>
      </div>
      <div class="form-group">
        <label>Email:</label>
        <p class="from-control-static form-control ">@Model.Email</p>
      </div>
      <div class="form-group">
        <label>Địa chỉ:</label>
        <p class="from-control-static form-control ">@Model.Address</p>
      </div>
      <div class="form-group">
        <label>Tỉnh thành:</label>
        <p class="from-control-static form-control ">@Model.Province</p>
      </div>
      <div class="checkbox">
        <label Trạng thái:></label>
        <p class="from-control-static form-control ">
          @(Model.IsLocked ? "Tài khoản đang bị khóa" : "tài khoản đang hoạt động")
        </p>
      </div>
      <div class="from-group text-right">
        @if (!SV21T1020203.BusinessLayers.CommonDataService.InUsedCustomer(Model.CustomerID))
        {
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-floppy-o"></i> Xóa dữ liệu
          </button>

        }
        <a href="~/Customer" class="btn btn-default">
          Quay lại
        </a>
      </div>
    </form>

  </div>
</div>
