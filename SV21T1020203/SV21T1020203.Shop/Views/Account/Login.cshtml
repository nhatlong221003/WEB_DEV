@{
  Layout = null;
}
<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>NL Shop - Đăng nhập</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

  <!-- Bootstrap 5.3.0 -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Google Font -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700&display=swap">

  <style>
    body {
      background-color: #f7f7f7;
      font-family: 'Source Sans Pro', sans-serif;
    }

    .login-box {
      margin-top: 100px;
      background-color: #fff;
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .login-logo a {
      color: #007bff;
      font-size: 32px;
      font-weight: bold;
      text-decoration: none;
    }

    .login-logo a:hover {
      text-decoration: underline;
    }

    .login-box-body {
      border-radius: 10px;
    }

    .form-control {
      border-radius: 5px;
      box-shadow: none;
      transition: border-color 0.3s;
    }

    .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
      border-radius: 5px;
      transition: background-color 0.3s, transform 0.2s;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      transform: translateY(-1px);
    }

    .btn-primary:active {
      transform: translateY(0);
    }

    .invalid-feedback {
      display: block;
      color: #dc3545;
    }

    .register-link {
      margin-top: 20px;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="login-box text-center">
          <div class="login-logo">
            <a href="#"><b>Nhật Long</b> Shop</a>
          </div>
          <div class="login-box-body">
            <p class="login-box-msg">Đăng nhập hệ thống</p>

            <form action="~/Account/Login" method="post">
              @Html.AntiForgeryToken()
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Tên đăng nhập" name="username"
                  value="@ViewBag.UserName" required>
                <div class="invalid-feedback">Tên đăng nhập không được để trống.</div>
              </div>
              <div class="form-group">
                <input type="password" class="form-control" placeholder="Mật khẩu" name="password" required>
                <div class="invalid-feedback">Mật khẩu không được để trống.</div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  @Html.ValidationMessage("Error", "", new { @style = "color:#f00" })
                </div>
                <div class="col-xs-12 mt-3">
                  <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                </div>
              </div>
            </form>
            <div class="register-link">
              <p>Bạn chưa có tài khoản? <a href="~/Account/Register">Đăng ký ngay</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- jQuery 3 -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <!-- Bootstrap 5.3.0 -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
